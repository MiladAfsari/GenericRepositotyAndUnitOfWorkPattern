@model IEnumerable<GenericRepositotyAndUnitOfWorkPattern.Models.Contact>

<div class="row pt-4">
    <div class="col-6">
        <h2 class="text-primary">Expenses List</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-controller="Contact" asp-action="Create" class="btn btn-primary">Create New Contact</a>
    </div>
</div>
<br />
@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Fmily
                </th>
                <th>
                    Phone
                </th>
                <th>
                    Email
                </th>
                <th>
                    Register date
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td width="16%">@item.Name</td>
                <td width="15%">@item.Family</td>
                <td width="15%">@item.Phone</td>
                <td width="15%">@item.Email</td>
                <td width="15%">@item.RegisterDate</td>
                <td width="15%">
                    <div class="w-100 btn-group" role="group">
                        <a asp-controller="Contact" asp-action="Update" asp-route-Id="@item.Id" class="btn btn-primary mx-1">Update</a>
                        <a asp-controller="Contact" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger mx-1">Delete</a>
                    </div>
                </td>
            </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No Item Created</p>
}
</div>